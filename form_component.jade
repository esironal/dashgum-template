    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body
    section#container
      //
        **********************************************************************************************************************************************************
        TOP BAR CONTENT & NOTIFICATIONS
        ***********************************************************************************************************************************************************
      // header start
      header.header.black-bg
        .sidebar-toggle-box
          .fa.fa-bars.tooltips(data-placement='right', data-original-title='Toggle Navigation')
        // logo start
        a.logo(href='index.html')
          b DASHGUM FREE
        // logo end
        #top_menu.nav.notify-row
          // notification start
          ul.nav.top-menu
            // settings start
            li.dropdown
              a.dropdown-toggle(data-toggle='dropdown', href='index.html#')
                i.fa.fa-tasks
                span.badge.bg-theme 4
              ul.dropdown-menu.extended.tasks-bar
                .notify-arrow.notify-arrow-green
                li
                  p.green You have 4 pending tasks
                li
                  a(href='index.html#')
                    .task-info
                      .desc DashGum Admin Panel
                      .percent 40%
                    .progress.progress-striped
                      .progress-bar.progress-bar-success(role='progressbar', aria-valuenow='40', aria-valuemin='0', aria-valuemax='100', style='width: 40%')
                        span.sr-only 40% Complete (success)
                li
                  a(href='index.html#')
                    .task-info
                      .desc Database Update
                      .percent 60%
                    .progress.progress-striped
                      .progress-bar.progress-bar-warning(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 60%')
                        span.sr-only 60% Complete (warning)
                li
                  a(href='index.html#')
                    .task-info
                      .desc Product Development
                      .percent 80%
                    .progress.progress-striped
                      .progress-bar.progress-bar-info(role='progressbar', aria-valuenow='80', aria-valuemin='0', aria-valuemax='100', style='width: 80%')
                        span.sr-only 80% Complete
                li
                  a(href='index.html#')
                    .task-info
                      .desc Payments Sent
                      .percent 70%
                    .progress.progress-striped
                      .progress-bar.progress-bar-danger(role='progressbar', aria-valuenow='70', aria-valuemin='0', aria-valuemax='100', style='width: 70%')
                        span.sr-only 70% Complete (Important)
                li.external
                  a(href='#') See All Tasks
            // settings end
            // inbox dropdown start
            li#header_inbox_bar.dropdown
              a.dropdown-toggle(data-toggle='dropdown', href='index.html#')
                i.fa.fa-envelope-o
                span.badge.bg-theme 5
              ul.dropdown-menu.extended.inbox
                .notify-arrow.notify-arrow-green
                li
                  p.green You have 5 new messages
                li
                  a(href='index.html#')
                    span.photo
                      img(alt='avatar', src='assets/img/ui-zac.jpg')
                    span.subject
                      span.from Zac Snider
                      span.time Just now
                    span.message
                      | Hi mate, how is everything?
                li
                  a(href='index.html#')
                    span.photo
                      img(alt='avatar', src='assets/img/ui-divya.jpg')
                    span.subject
                      span.from Divya Manian
                      span.time 40 mins.
                    span.message
                      | Hi, I need your help with this.
                li
                  a(href='index.html#')
                    span.photo
                      img(alt='avatar', src='assets/img/ui-danro.jpg')
                    span.subject
                      span.from Dan Rogers
                      span.time 2 hrs.
                    span.message
                      | Love your new Dashboard.
                li
                  a(href='index.html#')
                    span.photo
                      img(alt='avatar', src='assets/img/ui-sherman.jpg')
                    span.subject
                      span.from Dj Sherman
                      span.time 4 hrs.
                    span.message
                      | Please, answer asap.
                li
                  a(href='index.html#') See all messages
            // inbox dropdown end
          // notification end
        .top-menu
          ul.nav.pull-right.top-menu
            li
              a.logout(href='login.html') Logout
      // header end
      //
        **********************************************************************************************************************************************************
        MAIN SIDEBAR MENU
        ***********************************************************************************************************************************************************
      // sidebar start
      aside
        #sidebar.nav-collapse
          // sidebar menu start
          ul#nav-accordion.sidebar-menu
            p.centered
              a(href='profile.html')
                img.img-circle(src='assets/img/ui-sam.jpg', width='60')
            h5.centered Marcel Newman
            li.mt
              a(href='index.html')
                i.fa.fa-dashboard
                span Dashboard
            li.sub-menu
              a(href='javascript:;')
                i.fa.fa-desktop
                span UI Elements
              ul.sub
                li
                  a(href='general.html') General
                li
                  a(href='buttons.html') Buttons
                li
                  a(href='panels.html') Panels
            li.sub-menu
              a(href='javascript:;')
                i.fa.fa-cogs
                span Components
              ul.sub
                li
                  a(href='calendar.html') Calendar
                li
                  a(href='gallery.html') Gallery
                li
                  a(href='todo_list.html') Todo List
            li.sub-menu
              a(href='javascript:;')
                i.fa.fa-book
                span Extra Pages
              ul.sub
                li
                  a(href='blank.html') Blank Page
                li
                  a(href='login.html') Login
                li
                  a(href='lock_screen.html') Lock Screen
            li.sub-menu
              a.active(href='javascript:;')
                i.fa.fa-tasks
                span Forms
              ul.sub
                li.active
                  a(href='form_component.html') Form Components
            li.sub-menu
              a(href='javascript:;')
                i.fa.fa-th
                span Data Tables
              ul.sub
                li
                  a(href='basic_table.html') Basic Table
                li
                  a(href='responsive_table.html') Responsive Table
            li.sub-menu
              a(href='javascript:;')
                i.fa.fa-bar-chart-o
                span Charts
              ul.sub
                li
                  a(href='morris.html') Morris
                li
                  a(href='chartjs.html') Chartjs
          // sidebar menu end
      // sidebar end
      //
        **********************************************************************************************************************************************************
        MAIN CONTENT
        ***********************************************************************************************************************************************************
      // main content start
      section#main-content
        section.wrapper
          h3
            i.fa.fa-angle-right
            |  Form Components
          // BASIC FORM ELELEMNTS
          .row.mt
            .col-lg-12
              .form-panel
                h4.mb
                  i.fa.fa-angle-right
                  |  Form Elements
                form.form-horizontal.style-form(method='get')
                  .form-group
                    label.col-sm-2.col-sm-2.control-label Default
                    .col-sm-10
                      input.form-control(type='text')
                  .form-group
                    label.col-sm-2.col-sm-2.control-label Help text
                    .col-sm-10
                      input.form-control(type='text')
                      span.help-block A block of help text that breaks onto a new line and may extend beyond one line.
                  .form-group
                    label.col-sm-2.col-sm-2.control-label Rounder
                    .col-sm-10
                      input.form-control.round-form(type='text')
                  .form-group
                    label.col-sm-2.col-sm-2.control-label Input focus
                    .col-sm-10
                      input#focusedInput.form-control(type='text', value='This is focused...')
                  .form-group
                    label.col-sm-2.col-sm-2.control-label Disabled
                    .col-sm-10
                      input#disabledInput.form-control(type='text', placeholder='Disabled input here...', disabled='')
                  .form-group
                    label.col-sm-2.col-sm-2.control-label Placeholder
                    .col-sm-10
                      input.form-control(type='text', placeholder='placeholder')
                  .form-group
                    label.col-sm-2.col-sm-2.control-label Password
                    .col-sm-10
                      input.form-control(type='password', placeholder='')
                  .form-group
                    label.col-lg-2.col-sm-2.control-label Static control
                    .col-lg-10
                      p.form-control-static email@example.com
            // col-lg-12
          // /row
          // INLINE FORM ELELEMNTS
          .row.mt
            .col-lg-12
              .form-panel
                h4.mb
                  i.fa.fa-angle-right
                  |  Inline Form
                form.form-inline(role='form')
                  .form-group
                    label.sr-only(for='exampleInputEmail2') Email address
                    input#exampleInputEmail2.form-control(type='email', placeholder='Enter email')
                  .form-group
                    label.sr-only(for='exampleInputPassword2') Password
                    input#exampleInputPassword2.form-control(type='password', placeholder='Password')
                  button.btn.btn-theme(type='submit') Sign in
              // /form-panel
            // /col-lg-12
          // /row
          // INPUT MESSAGES
          .row.mt
            .col-lg-12
              .form-panel
                h4.mb
                  i.fa.fa-angle-right
                  |  Input Messages
                form.form-horizontal.tasi-form(method='get')
                  .form-group.has-success
                    label.col-sm-2.control-label.col-lg-2(for='inputSuccess') Input with success
                    .col-lg-10
                      input#inputSuccess.form-control(type='text')
                  .form-group.has-warning
                    label.col-sm-2.control-label.col-lg-2(for='inputWarning') Input with warning
                    .col-lg-10
                      input#inputWarning.form-control(type='text')
                  .form-group.has-error
                    label.col-sm-2.control-label.col-lg-2(for='inputError') Input with error
                    .col-lg-10
                      input#inputError.form-control(type='text')
              // /form-panel
            // /col-lg-12
          // /row
          // INPUT MESSAGES
          .row.mt
            .col-lg-12
              .form-panel
                h4.mb
                  i.fa.fa-angle-right
                  |  Checkboxes, Radios &amp; Selects
                .checkbox
                  label
                    input(type='checkbox', value='')
                    | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;    Option one is this and that&mdash;be sure to include why it&apos;s great
                .radio
                  label
                    input#optionsRadios1(type='radio', name='optionsRadios', value='option1', checked='')
                    | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;    Option one is this and that&mdash;be sure to include why it&apos;s great
                .radio
                  label
                    input#optionsRadios2(type='radio', name='optionsRadios', value='option2')
                    | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;    Option two can be something else and selecting it will deselect option one
                hr
                label.checkbox-inline
                  input#inlineCheckbox1(type='checkbox', value='option1')
                  |  1
                label.checkbox-inline
                  input#inlineCheckbox2(type='checkbox', value='option2')
                  |  2
                label.checkbox-inline
                  input#inlineCheckbox3(type='checkbox', value='option3')
                  |  3
                hr
                select.form-control
                  option 1
                  option 2
                  option 3
                  option 4
                  option 5
                br
                select.form-control(multiple='')
                  option 1
                  option 2
                  option 3
                  option 4
                  option 5
              // /form-panel
            // /col-lg-12
            // CUSTOM TOGGLES
            .col-lg-12
              .form-panel
                h4.mb
                  i.fa.fa-angle-right
                  |  Custom Toggles
                .row.mt
                  .col-sm-6.text-center
                    input(type='checkbox', checked='', data-toggle='switch')
                  .col-sm-6.text-center
                    input(type='checkbox', data-toggle='switch')
                .row.mt
                  .col-sm-6.text-center
                    .switch.switch-square(data-on-label="<i class=' fa fa-check'></i>", data-off-label="<i class='fa fa-times'></i>")
                      input(type='checkbox')
                  .col-sm-6.text-center
                    .switch.switch-square(data-on-label="<i class=' fa fa-check'></i>", data-off-label="<i class='fa fa-times'></i>")
                      input(type='checkbox', checked='')
                .row.mt
                  .col-sm-6.text-center
                    input(type='checkbox', disabled='', data-toggle='switch')
                  .col-sm-6.text-center
                    input(type='checkbox', checked='', disabled='', data-toggle='switch')
          // /row
      // /MAIN CONTENT
      // main content end
      // footer start
      footer.site-footer
        .text-center
          | 2014 - Alvarez.is
          a.go-top(href='form_component.html#')
            i.fa.fa-angle-up
      // footer end
